{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
  ],
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "module": "es2020",
    "target": "esnext",
    "jsx": "preserve",
    "jsxImportSource": "@raycenity/devolve-ui",
    "baseUrl": "./",
    "rootDirs": [
      "src",
      "test"
    ],
    "paths": {
      "*": ["./src/*"]
    },
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./out/types",
    "declarationMap": true,
    "composite": true,
    "isolatedModules": true
  },
  "references": [
    { "path": "../devolve-ui" },
    { "path": "../misc-ts" }
  ]
}
